<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Bootstrap Shop</title>
    <link rel="icon"
          href="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo-shadow.png"/>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: "Inter", sans-serif;
        }
        #b-example-vr {
            height: 98vh;
        }
    </style>
</head>
<body>

<div class="bg-dark text-light">
    <div class="container-fluid">
        <div class="row pt-3 px-5" id="b-example-vr">
            <main class="col-2">
                <div class="container-fluid text-center">
                    <a class="navbar-brand"
                       href="/">
                        Bootstrap Shop
                    </a>
                </div>
                <hr>
                <ul class="nav navbar-dark nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClassOrDefault(controllerName: "Product")"
                           asp-controller="Product"
                           asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClassOrDefault(controllerName: "Order")"
                           asp-controller="Order"
                           asp-action="Index">
                            Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#"
                           class="nav-link">
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#"
                           class="nav-link">
                            Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#"
                           class="nav-link">
                            Customers
                        </a>
                    </li>
                </ul>
            </main>

            <main role="main" class="col-8 pt-5">
                @RenderBody()
            </main>

            <div class="col-2"></div>
        </div>
    </div>
</div>

<footer class="footer fixed-bottom text-center bg-dark text-light p-1">
    <div class="container">
        <span>
            Copyrights ©2024 Bootstrap Shop. Build with <i class="bi bi-heart text-danger"></i> for learning purposes.
        </span>
    </div>
</footer>

<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous">
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>


@functions {

    /// <summary>
    ///     Determines whether the current controller and action match the specified controller name.
    /// </summary>
    /// <param name="controllerName">The name of the controller to compare against.</param>
    /// <returns>The string "active" if the controller and action match; otherwise, an empty string.</returns>
    private string GetActiveClassOrDefault(string controllerName)
    {
        var action = ViewContext.RouteData
            .Values["Action"]?
            .ToString() ?? "";
        var controller = ViewContext.RouteData
            .Values["Controller"]?
            .ToString() ?? "";

        return action.Equals("Index") && controller.Equals(controllerName)
            ? "active"
            : "";
    }

}
