<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Bootstrap Shop</title>
    <link rel="icon"
          href="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo-shadow.png"/>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: "Inter", sans-serif;
        }
    </style>
</head>
<body>
<header>
    <nav class="container navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand"
               href="/">
                Bootstrap Shop
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse"
                 id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClassOrDefault(controllerName: "Product")"
                           asp-controller="Product"
                           asp-action="Index">
                            Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClassOrDefault(controllerName: "Order")"
                           asp-controller="Order"
                           asp-action="Index">
                            Orders
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @GetActiveClassOrDefault(controllerName: "Shop")"
                           href="#"
                           id="navbarDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Shop
                        </a>
                        <ul class="dropdown-menu"
                            aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item"
                                   href="#">
                                    Action 1
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider"/>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   href="#">
                                    Another 2
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider"/>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   href="#">
                                    Another 3
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2"
                           type="search"
                           placeholder="Search"
                           aria-label="Search"/>
                    <button class="btn btn-outline-success"
                            type="submit">
                        Search
                    </button>
                </form>
            </div>
        </div>
    </nav>
</header>

<div class="container py-5">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer fixed-bottom my-3 text-center">
    <div class="container">
        <span>
            Copyrights ©2024 Bootstrap Shop. Build with <i class="bi bi-heart text-danger"></i> for learning purposes.
        </span>
    </div>
</footer>

<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous">
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@functions {

    /// <summary>
    ///     Determines whether the current controller and action match the specified controller name.
    /// </summary>
    /// <param name="controllerName">The name of the controller to compare against.</param>
    /// <returns>The string "active" if the controller and action match; otherwise, an empty string.</returns>
    private string GetActiveClassOrDefault(string controllerName)
    {
        var action = ViewContext.RouteData
            .Values["Action"]?
            .ToString() ?? "";
        var controller = ViewContext.RouteData
            .Values["Controller"]?
            .ToString() ?? "";

        return action.Equals("Index") && controller.Equals(controllerName)
            ? "active"
            : "";
    }

}
